<!--pages/home/home.wxml-->
<view>
  <view class="top">
    <input class='top-search' type='text' placeholder='在所有商品中搜索' bindconfirm='searchDog'></input>
  </view>
  <view class='bannerbox'>
    <swiper 
    indicator-dots="{{true}}" 
    autoplay="{{true}}" 
    interval="{{3000}}" 
    duration="{{500}}"
    circular="{{true}}"
    >
      <block wx:for="{{banner}}" wx:key="{{index}}">
        <swiper-item>
          <image src="{{item.coverURL}}" class="slide-image hongbanner" width="100%" height="240" />
        </swiper-item>
      </block>
    </swiper>
  </view>
    <!-- <view>
      <view wx:for="{{homeList}}" wx:key="{{index}}"> 
        <image src='{{item}}' width="100%" height="240"></image>
      </view>
  </view> -->
  <view class='homelist'>
    <view wx:for="{{homeList}}" wx:key="{{index}}" class='homechild'> 
     <image src='{{item.coverURL}}' width="50px" height="240"></image>
    </view>
  </view>
</view>